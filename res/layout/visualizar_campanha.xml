<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.luksfon.villasalute.campanha.view.VisualizarCampanhaActivity" >

    <TextView
        android:id="@+id/lblDescricao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/string_label_descricao"
        android:textAppearance="@style/TextMediumBlue" />

    <TextView
        android:id="@+id/txtDescricao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lblDescricao"
        android:layout_alignStart="@+id/lblDescricao"
        android:layout_below="@+id/lblDescricao"
        android:layout_marginTop="2dp"
        android:text="@string/string_padrao"
        android:textAppearance="@style/TextMediumOrange" />

    <TextView
        android:id="@+id/lblSituacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtDescricao"
        android:layout_alignStart="@+id/txtDescricao"
        android:layout_below="@+id/txtDescricao"
        android:layout_marginTop="20dp"
        android:text="@string/string_label_situacao"
        android:textAppearance="@style/TextMediumBlue" />

    <TextView
        android:id="@+id/txtSituacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lblSituacao"
        android:layout_alignStart="@+id/lblSituacao"
        android:layout_below="@+id/lblSituacao"
        android:layout_marginTop="2dp"
        android:text="@string/string_padrao"
        android:textAppearance="@style/TextMediumOrange" />

    <TextView
        android:id="@+id/lblClientes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtSituacao"
        android:layout_alignStart="@+id/txtSituacao"
        android:layout_below="@+id/txtSituacao"
        android:layout_marginTop="20dp"
        android:text="@string/string_label_clientes"
        android:textAppearance="@style/TextMediumBlue" />

    <GridView
        android:id="@+id/grid_clientes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/lblClientes"
        android:layout_alignLeft="@+id/lblClientes"
        android:layout_below="@+id/lblClientes"
        android:layout_marginTop="2dp"
        android:numColumns="1" >
    </GridView>

</RelativeLayout>