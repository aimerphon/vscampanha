<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.luksfon.villasalute.campanha.view.VisualizarCampanhaActivity" >

    <TextView
        android:id="@+id/lblDescricao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:text="@string/string_label_descricao"
        android:textAppearance="@style/TextMediumBlue" />

    <TextView
        android:id="@+id/txtDescricao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lblDescricao"
        android:layout_alignStart="@+id/lblDescricao"
        android:layout_below="@+id/lblDescricao"
        android:layout_marginTop="2dp"
        android:text="@string/string_padrao"
        android:textAppearance="@style/TextMediumOrange" />

    <TextView
        android:id="@+id/lblSituacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtDescricao"
        android:layout_alignStart="@+id/txtDescricao"
        android:layout_below="@+id/txtDescricao"
        android:layout_marginTop="20dp"
        android:text="@string/string_label_situacao"
        android:textAppearance="@style/TextMediumBlue" />

    <TextView
        android:id="@+id/txtSituacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lblSituacao"
        android:layout_alignStart="@+id/lblSituacao"
        android:layout_below="@+id/lblSituacao"
        android:layout_marginTop="2dp"
        android:text="@string/string_padrao"
        android:textAppearance="@style/TextMediumOrange" />

    <TextView
        android:id="@+id/lblTipoEnvio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtSituacao"
        android:layout_alignStart="@+id/txtSituacao"
        android:layout_below="@+id/txtSituacao"
        android:layout_marginTop="20dp"
        android:text="@string/string_label_envio"
        android:textAppearance="@style/TextMediumBlue" />

    <TextView
        android:id="@+id/txtTipoEnvio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lblTipoEnvio"
        android:layout_alignStart="@+id/lblTipoEnvio"
        android:layout_below="@+id/lblTipoEnvio"
        android:layout_marginTop="2dp"
        android:text="@string/string_padrao"
        android:textAppearance="@style/TextMediumOrange" />

    <TextView
        android:id="@+id/lblTipoMensagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtTipoEnvio"
        android:layout_alignStart="@+id/txtTipoEnvio"
        android:layout_below="@+id/txtTipoEnvio"
        android:layout_marginTop="20dp"
        android:text="@string/string_label_tipo_mensagem"
        android:textAppearance="@style/TextMediumBlue" />

    <TextView
        android:id="@+id/txtTipoMensagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lblTipoMensagem"
        android:layout_alignStart="@+id/lblTipoMensagem"
        android:layout_below="@+id/lblTipoMensagem"
        android:layout_marginTop="2dp"
        android:text="@string/string_padrao"
        android:textAppearance="@style/TextMediumOrange" />

    <TextView
        android:id="@+id/lblMensagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtTipoMensagem"
        android:layout_alignStart="@+id/txtTipoMensagem"
        android:layout_below="@+id/txtTipoMensagem"
        android:layout_marginTop="20dp"
        android:text="@string/string_label_mensagem"
        android:textAppearance="@style/TextMediumBlue" />

    <TextView
        android:id="@+id/txtMensagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lblMensagem"
        android:layout_alignStart="@+id/lblMensagem"
        android:layout_below="@+id/lblMensagem"
        android:layout_marginTop="2dp"
        android:text="@string/string_padrao"
        android:textAppearance="@style/TextMediumOrange" />

    <TextView
        android:id="@+id/lblClientes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtMensagem"
        android:layout_alignStart="@+id/txtMensagem"
        android:layout_below="@+id/txtMensagem"
        android:layout_marginTop="20dp"
        android:text="@string/string_label_clientes"
        android:textAppearance="@style/TextMediumBlue" />

    <ListView
        android:id="@+id/grid_clientes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lblClientes"
        android:layout_alignStart="@+id/lblClientes"
        android:layout_below="@+id/lblClientes"
        android:layout_marginTop="2dp"
        android:background="#ffffff"
        android:divider="#fff3f3f3"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:dividerHeight="3dp"
        android:numColumns="1" >
    </ListView>

</RelativeLayout>