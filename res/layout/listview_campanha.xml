<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/imgSituacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_action_group" />

    <TextView
        android:id="@+id/lblCampanha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imgSituacao"
        android:layout_toEndOf="@+id/imgSituacao"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:text="@string/string_padrao"
        android:textAppearance="@style/TextMediumOrange" />

    <TextView
        android:id="@+id/lblMensagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblCampanha"
        android:layout_toRightOf="@+id/imgSituacao"
        android:layout_toEndOf="@+id/imgSituacao"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:text="@string/string_padrao"
        android:textAppearance="@style/TextSmallBlue" />

</RelativeLayout>