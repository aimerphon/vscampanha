<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/lblTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:text="@string/string_padrao"
        android:textAppearance="@style/TextMediumBlue" />

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/lblTitle"
        android:layout_alignBottom="@+id/lblTitle"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/lblTitle"
        android:layout_toRightOf="@+id/lblTitle"
        android:text="@string/string_padrao"
        android:textAppearance="@style/TextMediumOrange" />

    <TextView
        android:id="@+id/lblSubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lblTitle"
        android:layout_alignStart="@+id/lblTitle"
        android:layout_below="@+id/lblTitle"
        android:layout_marginTop="15dp"
        android:text="@string/string_padrao"
        android:textAppearance="@style/TextMediumBlue" />

    <TextView
        android:id="@+id/txtSubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/lblSubTitle"
        android:layout_alignBottom="@+id/lblSubTitle"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/lblSubTitle"
        android:layout_toRightOf="@+id/lblSubTitle"
        android:text="@string/string_padrao"
        android:textAppearance="@style/TextMediumOrange" />

</RelativeLayout>